<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAFAFA">

    <ImageView
        android:id="@+id/sc_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/spbackground1"
        android:contentDescription="Background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88212121" />


    <ImageButton
        android:id="@+id/exit_skill_card"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/exit_skill_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/sc_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Taro Tanaka"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textAlignment="center"
                android:shadowColor="#AA000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4" />

            <TextView
                android:id="@+id/sc_job_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Photography Editing"
                android:textColor="#E91E63"
                android:textSize="20sp"
                android:textAlignment="center"
                android:shadowColor="#40000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <!-- Overall Rating Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_card_background"
                android:padding="20dp"
                android:elevation="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overall Rating"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/sc_overall_rating_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/sc_overall_rating"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:stepSize="1"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:progressTint="#FFC107"
                    android:progressBackgroundTint="#888888" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/additional_ratings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp"
                android:elevation="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Communication Ability"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <RatingBar
                        android:id="@+id/ratingBarCommunication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="#FFC107"
                        android:progressBackgroundTint="#999999"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:stepSize="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speed of Transaction"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <RatingBar
                        android:id="@+id/ratingBarSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="#FFC107"
                        android:progressBackgroundTint="#999999"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:stepSize="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quality of Product"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <RatingBar
                        android:id="@+id/ratingBarQuality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="#FFC107"
                        android:progressBackgroundTint="#999999"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:stepSize="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Value for Price"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <RatingBar
                        android:id="@+id/ratingBarValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="#FFC107"
                        android:progressBackgroundTint="#999999"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:stepSize="1" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
