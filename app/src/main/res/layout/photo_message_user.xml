<?xml version="1.0" encoding="utf-8"?>
<com.realeyez.trademart.gui.components.messaging.MediaUserChatPanel xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Message Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/user_photo_message_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#f9f9f9"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toStartOf="@+id/photo_user_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Image -->
            <ImageView
                android:id="@+id/user_photo_message_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:maxHeight="400dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:layout_marginBottom="10dp"/>

            <!-- Timestamp -->
            <TextView
                android:id="@+id/user_photo_message_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="12:34 PM"
                android:textColor="@color/grey"
                android:textSize="10sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- User Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo_user_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/profile_picture_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_photo_message_card" />

</com.realeyez.trademart.gui.components.messaging.MediaUserChatPanel>
