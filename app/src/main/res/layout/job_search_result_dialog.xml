<?xml version="1.0" encoding="utf-8"?>
<com.realeyez.trademart.gui.components.search.JobListingSearchResultDialog xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/job_search_result_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    >

    <ImageView
        android:id="@+id/jobsearch_thumbnail_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jobsearch_title_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/jobsearch_thumbnail_view"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/jobsearch_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JobListing Title"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jobsearch_amount_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/jobsearch_title_panel"
        >

        <TextView
            android:id="@+id/jobsearch_amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income: "
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/jobsearch_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/jobsearch_amount_label"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jobsearch_profile_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/jobsearch_amount_panel"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/jobsearch_profile_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_picture_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/jobsearch_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/jobsearch_profile_picture"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.realeyez.trademart.gui.components.search.JobListingSearchResultDialog>


