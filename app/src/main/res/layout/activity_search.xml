<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".SearchActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_main"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#7C4747">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/search_back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/arrow_left_dark" />

            <EditText
                android:id="@+id/search_query_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:hint="Search..."
                android:inputType="text"
                android:minHeight="48dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#D3CFCF" />

            <ImageButton
                android:id="@+id/search_submit_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                app:srcCompat="@android:drawable/ic_menu_search" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/search_result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_toolbar"
        app:tabIndicatorFullWidth="true"
        app:tabTextColor="@color/pink"
        app:tabIndicatorColor="@color/pink">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/search_post_result_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/search_service_result_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/search_jobs_result_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jobs" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/search_user_result_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Users" />

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
    android:id="@+id/search_content_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_result_toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>


