<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_job_transactions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/job_transactions_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pink"
            android:gravity="center|top"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/jobtransactions_header_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:paddingStart="15dp"
                android:text="Active Jobs"
                android:textColor="@color/white"
                android:textSize="11pt" />

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/jobtransactions_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/job_transactions_toolbar"
            app:tabIndicatorFullWidth="true"
            app:tabTextColor="@color/pink"
            app:tabIndicatorColor="@color/pink">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/jobtransactions_active_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/outline_assignment_24"
                android:tooltipText="Active" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/jobtransactions_applications_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/pending_action"
                android:tooltipText="Applications"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/jobtransactions_hirings_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/assignment"
                android:tooltipText="Hirings" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/jobtransactions_completed_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/history"
                android:tooltipText="Completed" />

        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/jobtransactions_content_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/background_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jobtransactions_tabs"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>


