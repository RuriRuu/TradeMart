<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hapticFeedbackEnabled="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/payment_message_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="64dp"
        app:cardBackgroundColor="#F26594"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Username -->

            <!-- Message Text -->
            <TextView
                android:id="@+id/payment_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:lineSpacingMultiplier="1.2"
                android:paddingVertical="8dp"
                android:text="Job"
                android:textAlignment="center"
                android:textColor="#F2EDED"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/payment_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:lineSpacingMultiplier="1.2"
                android:text="PAYMENT AMOUNT"
                android:textAlignment="center"
                android:textColor="#F2EDED"
                android:textSize="24sp" />

            <!-- Timestamp -->

            <Button
                android:id="@+id/payment_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF"
                android:backgroundTintMode="add"
                android:text="Payment Received"
                android:textColor="#333333"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/payment_message_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins"
                android:text="12:34 PM"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>