<?xml version="1.0" encoding="utf-8"?>
<com.realeyez.trademart.gui.components.search.UserSearchResultDialog xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_search_result_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/usersearch_result_main_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/usersearch_result_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/usersearch_result_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:text="result_title" />

    </LinearLayout>
</com.realeyez.trademart.gui.components.search.UserSearchResultDialog>
